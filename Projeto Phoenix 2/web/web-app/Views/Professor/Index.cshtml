@model IEnumerable<web_app.Models.Professor>

@{
    ViewData["Title"] = "Index";
}


<!-- ======= Caixa ======= -->
<section id="why-us" class="why-us">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="content">
                    <h3>Professor</h3>
                    <img src="~/images/perfilanon.jpeg" alt="">
                    <p>Nome do ADM:</p>
                    <p>Código:</p>
                </div>
            </div>
            <div class="col-lg-8 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <div class="icon-boxes d-flex flex-column justify-content-center">
                    <div class="row">
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box mt-4 mt-xl-0">
                                <img src="~/images/fumaca.png" alt="">
                                <h4>Cadastrar Professores:</h4>
                                <a type="button" asp-action="create" class="btn btn-dark acessar mb-2">Cadastrar</a>
                            </div>
                        </div>
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box mt-4 mt-xl-0">
                                <img src="~/images/fumaca.png" alt="">
                                <h4>Cadastrar Turmas:</h4>
                                <button type="button" onclick="" class="btn btn-dark acessar">Cadastrar</button>
                            </div>
                        </div>
                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box mt-4 mt-xl-0">
                                <img src="~/images/fumaca.png" alt="">
                                <h4>Gerenciar Cargos:</h4>
                                <button type="button" onclick="" class="btn btn-dark acessar">Gerenciar</button>
                            </div>
                        </div>
                    </div>
                </div><!-- Fim da .content-->
            </div>
        </div>

    </div>
</section><!-- Fim da Caixa -->
<!-- ======= Seção de Recursos ======= -->
